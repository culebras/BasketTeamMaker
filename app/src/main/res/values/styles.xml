<resources>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="RaiseWaveColorButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="rd_rippleColor">@color/rippleColor</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="SnackBarSingleLine" parent="Material.Widget.SnackBar.Mobile">
    </style>

    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
    </style>

    <style name="MenuItemRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#B6B6B6</item>
        <item name="rd_rippleAnimDuration">300</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">0dp</item>
    </style>

</resources>
