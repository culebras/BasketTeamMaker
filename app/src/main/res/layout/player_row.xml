<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tvPlayerName"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_person_outline_grey600_24dp"
        android:drawableStart="@drawable/ic_person_outline_grey600_24dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDeletePlayer"
        android:drawableLeft="@drawable/ic_remove_circle_outline_grey600_24dp"
        android:drawableStart="@drawable/ic_remove_circle_outline_grey600_24dp"
        android:layout_centerInParent="true"
        android:text="@null"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
